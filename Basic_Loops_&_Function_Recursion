#Calculate the length of the list
cities =["Delhi", "Kolkata", "Mumbai", "Banglore", "indore", "Patna"]
heroes= ["ironman", "Batman", "thor", "saktiman", "Antman"]

def Cal_Length(list):
    print(len(list))

Cal_Length(cities)
Cal_Length(heroes)

