#recursion 1st
def show(n):
    if(n == 0):
        return 
    print(n)
    show(n-1)
    print("End")
    
    
show(3)
---------------------------------------------------------------------------
#Factorial of n numbers
def factorial(n):
    if(n == 0 or n ==1):
        return 1
    else:
        return n* factorial(n-1)
        
print(factorial(6))
---------------------------------------------------------------------
#Print the item in the list
def print_list(list, idx=0):
    if(idx == len(list)):
        return
    print(list[idx])
    print_list(list, idx+1)

fruit =["Mango", "Oranges", "Banana", "PineApple", "Sugarcane"]
    
print_list(fruit)
