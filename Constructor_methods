#Method use 
class student:
    def __init__(self, name, marks):
        self.name = name
        self.marks = marks
    def get_avg(self):
        sum =0
        for val in self.marks:
            sum = sum+val
            print("Hi", self.name, "your average score is ", sum/3)
s1 = student("Naveen", [100, 52, 91])
s1.get_avg()
